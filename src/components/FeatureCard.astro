---
// src/components/FeatureCard.astro
interface Props {
  emoji: string;
  title: string;
  description: string;
}

const { emoji, title, description } = Astro.props;
---

<div class="p-6 rounded-lg border border-gray-200 dark:border-gray-800 hover:border-blue-500 dark:hover:border-blue-500 transition-colors">
  <span class="text-2xl mb-4 block">{emoji}</span>
  <h3 class="font-bold mb-2">{title}</h3>
  <p class="text-gray-600 dark:text-gray-400">{description}</p>
</div>