---
// src/layouts/Layout.astro
import { ViewTransitions } from 'astro:transitions';
import 'aos/dist/aos.css'; // Importa los estilos de AOS

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="CLI futurista para crear proyectos Astro con integración automática de GitHub" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-white font-['Inter',sans-serif]">
    <slot />
    <script>
      import AOS from 'aos';
      AOS.init({
        duration: 800,
        once: true,
        offset: 100,
        disable: 'mobile' // Deshabilita las animaciones en dispositivos móviles para mejor rendimiento
      });
    </script>
  </body>
</html>